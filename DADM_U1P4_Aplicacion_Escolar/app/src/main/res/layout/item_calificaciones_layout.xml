<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/textViewClave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:text="B1T1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextWhite"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:text=" / "/>

            <TextView
                android:id="@+id/textViewMateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextWhite"
                android:text="Calculo Diferencial"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:ems="12"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewCreditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:minEms="5"
            android:textSize="14sp"
            android:text="5"/>

        <TextView
            android:id="@+id/textViewCalificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:minEms="6"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="14sp"
            android:text="100"/>

        <TextView
            android:id="@+id/textViewEvaluacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:minEms="15"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="14sp"
            android:text="Evaluacion Ordinaria Primera Vez"/>

        <TextView
            android:id="@+id/textViewObservaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="14sp"
            android:text="Curso Aprobado"/>

    </TableRow>

</TableLayout>