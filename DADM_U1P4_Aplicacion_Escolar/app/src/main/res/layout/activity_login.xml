<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/back_icon"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="18dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36dp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Bienvenido!"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/googlesans_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Inicia sesion para empezar!"
                            android:fontFamily="@font/googlesans_medium"/>

                </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/card_background"
            android:elevation="36dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="26dp"
                    android:text="LOGIN"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="48dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                        <EditText
                            android:id="@+id/textViewControl"
                            android:drawableEnd="@drawable/icon_account"
                            android:drawableRight="@drawable/icon_account"
                            android:drawableTint="@color/colorBlack"
                            android:hint="No. Control"
                            android:textColor="@color/colorTextBlack"
                            android:paddingLeft="26dp"
                            android:paddingRight="26dp"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/googlesans_medium"
                            android:background="@drawable/edit_text_background"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="48dp"/>

                        <EditText
                            android:id="@+id/textViewContra"
                            android:layout_marginTop="24dp"
                            android:drawableEnd="@drawable/icon_pass"
                            android:drawableRight="@drawable/icon_pass"
                            android:drawableTint="@color/colorBlack"
                            android:hint="ContraseÃ±a"
                            android:textColor="@color/colorTextBlack"
                            android:paddingLeft="26dp"
                            android:paddingRight="26dp"
                            android:inputType="numberPassword"
                            android:fontFamily="@font/googlesans_medium"
                            android:background="@drawable/edit_text_background"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="48dp"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="48dp"
                            android:layout_marginTop="16dp"
                            android:text="Recuerdame"
                            android:textSize="18dp"
                            android:fontFamily="@font/googlesans_medium"
                            android:textColor="@color/colorTextBlack"/>

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_marginTop="36dp"
                            android:background="@drawable/button_background"
                            android:backgroundTint="@color/colorButton"
                            android:layout_width="156dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:text="Inicia Sesion"
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:fontFamily="@font/googlesans_medium"
                            android:textColor="@color/colorTextWhite"/>

                </LinearLayout>

        </RelativeLayout>

</LinearLayout>